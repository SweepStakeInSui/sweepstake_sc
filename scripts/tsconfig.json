{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "noImplicitAny": true,
    "outDir": "./dist",
    "sourceMap": true,
    "target": "es2020",
    "pretty": true,
    "strict": true,
    "strictNullChecks": true,
    "noEmit": true
  },
  "include": [
    "src/contractsCaller/*.ts", "src/*.ts", "tests/test_flow.ts", "src/**/*.ts"]
}